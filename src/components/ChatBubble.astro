---
import '../styles/global.css'
import { Image } from 'astro:assets'
import headshotImage from '../assets/cropped-headshot.jpeg'

interface Props {
    title?: string;
}

const { title } = Astro.props
---
<div class="flex flex-col items-end gap-4 w-full my-64">
    <div class="w-full p-16 bg-stone-50 rounded-4xl">
        {title && <h2 class="text-5xl mb-4">{title}</h2>}
        <div class="font-light text-xl">
            <slot />
        </div>
    </div>
    <Image class="rounded-full w-16" src={headshotImage} alt="headshot of andrew hochoy" />
</div>
